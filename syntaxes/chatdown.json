{
  "fileTypes": [
    "chat"
  ],
  "name": "Chatdown",
  "patterns": [
    {
      "include": "#frontMatter"
    },
    {
      "include": "#chat"
    }
  ],
  "repository": {
    "frontMatter": {
      "patterns": [
        {
          "match": "^(user|bot)(=)\\s*([a-zA-Z]+)\\s*$",
          "name": "meta.frontmatter.chatdown",
          "captures": {
            "1": {
              "name": "meta.frontmatter.key.chatdown",
              "patterns": [
                {
                  "include": "#frontmatter.key"
                }
              ]
            },
            "2": {
              "name": "meta.frontmatter.separator.chatdown"
            },
            "3": {
              "name": "meta.frontmatter.value.chatdown",
              "patterns": [
                {
                  "include": "#frontmatter.value"
                }
              ]
            }
          }
        },
        {
          "match": "^(users)(=)\\s*([a-zA-Z]+(,\\s*[a-zA-Z]+)*)\\s*$",
          "name": "meta.frontmatter.chatdown",
          "captures": {
            "1": {
              "name": "meta.frontmatter.key.chatdown",
              "patterns": [
                {
                  "include": "#frontmatter.key"
                }
              ]
            },
            "2": {
              "name": "meta.frontmatter.separator.chatdown",
              "patterns": [
                {
                  "include": "#frontmatter.separator"
                }
              ]
            },
            "3": {
              "name": "meta.frontmatter.value.chatdown",
              "patterns": [
                {
                  "include": "#frontmatter.value"
                }
              ]
            }
          }
        }
      ]
    },
    "frontmatter.key": {
      "patterns": [
        {
          "match": ".*",
          "name": "variable.other"
        }
      ]
    },
    "frontmatter.separator": {
      "patterns": [
        {
          "match": ".*",
          "name": "keyword.operator.assignment"
        }
      ]
    },
    "frontmatter.value": {
      "patterns": [
        {
          "match": "[a-zA-Z]+",
          "name": "string.unquoted"
        },
        {
          "match": ",",
          "name": "punctuation.separator.chatdown"
        }
      ]
    },
    "chat": {
      "patterns": [
        {
          "begin": "^(bot->(?!bot:)[a-zA-Z]+)|(bot)|([a-zA-Z]+)(:)",
          "end": "^(?=(bot->[a-zA-Z]+:.*)|([a-zA-Z]+:.*))",
          "name": "meta.chat",
          "beginCaptures": {
            "1": {
              "name": "meta.chat.participant.directmessage",
              "patterns": [
                {
                  "match": "bot",
                  "name": "meta.chat.participant.bot",
                  "captures": {
                    "0": {
                      "patterns": [
                        {
                          "include": "#chat.participant.bot"
                        }
                      ]
                    }
                  }
                },
                {
                  "match": "->",
                  "name": "meta.chat.separator.messageto",
                  "captures": {
                    "0": {
                      "patterns": [
                        {
                          "include": "#chat.separator.messageto"
                        }
                      ]
                    }
                  }
                },
                {
                  "match": "[a-zA-Z]+",
                  "name": "meta.chat.participant.user",
                  "captures": {
                    "0": {
                      "patterns": [
                        {
                          "include": "#chat.participant.user"
                        }
                      ]
                    }
                  }
                }
              ]
            },
            "2": {
              "name": "meta.chat.participant.bot",
              "patterns": [
                {
                  "include": "#chat.participant.bot"
                }
              ]
            },
            "3": {
              "name": "meta.chat.participant.user",
              "patterns": [
                {
                  "include": "#chat.participant.user"
                }
              ]
            },
            "4": {
              "name": "chat.separator"
            }
          },
          "patterns": [
            {
              "name": "meta.chat.text",
              "begin": "(?=[a-zA-Z\\s=:.]*)",
              "end": "^(?=[.=]*)$",
              "patterns": [
                {
                  "include": "#chat.text"
                }
              ]
            }
          ]
        }
      ]
    },
    "chat.participant.user": {
      "patterns": [
        {
          "match": ".*",
          "name": "markup.bold"
        }
      ]
    },
    "chat.participant.bot": {
      "patterns": [
        {
          "match": ".*",
          "name": "markup.bold"
        }
      ]
    },
    "chat.separator": {
      "patterns": [
        {
          "match": ".*",
          "name": "markup.bold"
        }
      ]
    },
    "chat.separator.messageto": {
      "patterns": [
        {
          "match": ".*",
          "name": "markup.bold"
        }
      ]
    },
    "chat.text": {
      "patterns": [
        {
          "match": ".*",
          "name": "meta.paragraph.markdown"
        }
      ]
    }
  },
  "scopeName": "source.chatdown"
}
