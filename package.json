{
  "name": "chatdown",
  "displayName": "chatdown",
  "description": "chatdown language support for vscode",
  "version": "0.0.0-semantically-released",
  "publisher": "SimonSiefke",
  "icon": "icon.png",
  "license": "MIT",
  "homepage": "https://github.com/SimonSiefke/vscode-chatdown/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimonSiefke/vscode-chatdown"
  },
  "bugs": "https://github.com/SimonSiefke/vscode-chatdown/issues",
  "engines": {
    "vscode": "^1.29.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": ["onLanguage:chatdown"],
  "contributes": {
    "languages": [
      {
        "id": "chatdown",
        "aliases": ["Chatdown"],
        "extensions": [".chat"],
        "configuration": "./configurations/chatdown.json"
      }
    ],
    "grammars": [
      {
        "language": "chatdown",
        "scopeName": "source.chatdown",
        "path": "./syntaxes/chatdown.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.bot",
        "url": "https://raw.githubusercontent.com/SimonSiefke/vscode-chatdown/master/schemas/bot.json"
      },
      {
        "fileMatch": ".jshintrc2",
        "url": "http://json.schemastore.org/jshintrc"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "echo ok",
    "watch": "run-p watch-client watch-server",
    "watch-client": "tsc -w -p tsconfig.json",
    "watch-server": "tsc -w -p server/tsconfig.json",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "prettier": "^1.16.4",
    "vscode-languageclient": "^5.3.0-next.1",
    "vscode-languageserver-types": "^3.14.0"
  },
  "devDependencies": {
    "@types/node": "^11.9.5",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^15.13.3",
    "semantic-release-config-bitworkers": "^1.2.2",
    "typescript": "^3.3.3333",
    "vscode": "^1.1.30"
  }
}
