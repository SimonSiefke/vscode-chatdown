{
  "name": "chatdown",
  "displayName": "chatdown",
  "description": "chatdown language support for vscode",
  "version": "0.0.1",
  "publisher": "SimonSiefke",
  "icon": "chatdown_icon.png",
  "license": "MIT",
  "homepage": "https://github.com/SimonSiefke/vscode-chatdown/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimonSiefke/vscode-chatdown"
  },
  "bugs": "https://github.com/SimonSiefke/vscode-chatdown/issues",
  "engines": {
    "vscode": "^1.29.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": ["onLanguage:markdown", "onLanguage:chatdown", "onLanguage:json2"],
  "main": "./dist/clientMain",
  "contributes": {
    "languages": [
      {
        "id": "chatdown",
        "aliases": ["Chatdown"],
        "extensions": [".chat"],
        "configuration": "./configurations/chatdown.json"
      },
      {
        "id": "json2",
        "extensions": [".json2"],
        "configuration": "./configurations/chatdown.json"
      }
    ],
    "grammars": [
      {
        "language": "chatdown",
        "scopeName": "source.chatdown",
        "path": "./syntaxes/chatdown.json"
      },
      {
        "language": "json2",
        "scopeName": "source.json2",
        "path": "./syntaxes/json2.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p tsconfig.json && tsc -p server/tsconfig.json",
    "watch": "run-p watch-client watch-server",
    "watch-client": "tsc -w -p tsconfig.json",
    "watch-server": "tsc -w -p server/tsconfig.json",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "prettier": "^1.11.1",
    "vscode-languageclient": "^4.0.0",
    "vscode-languageserver-types": "^3.6.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/node": "^9.4.6",
    "npm-run-all": "^4.1.3",
    "semantic-release": "^15.13.3",
    "semantic-release-vsce": "^2.2.6",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "vscode": "^1.1.11"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "verifyConditions": [
      "@semantic-release/changelog",
      "semantic-release-vsce",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog"
      },
      {
        "path": "semantic-release-vsce",
        "packageVsix": "chatdown.vsix"
      }
    ],
    "publish": [
      "semantic-release-vsce",
      {
        "path": "@semantic-release/github",
        "assets": "chatdown.vsix"
      }
    ]
  }
}
